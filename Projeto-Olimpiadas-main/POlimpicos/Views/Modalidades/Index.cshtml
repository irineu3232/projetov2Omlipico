@model IEnumerable<POlimpicos.Models.Modalidades>

@{
    ViewBag.Title = "Modalidades";
}

<div class="d-flex justify-content-between align-items-end mb-3">
    <h1 class="page-title">Atletas</h1>
    <div class="page-subtitle"> Total: <strong>@(Model?.Count() ?? 0) </strong></div>
</div>

<div class="table-wrap card-soft">
    <table class="table table-hover align-middle mb-0">
        <thead>
            <tr>
                <th style="width:80px">Código </th>
                <th>Modalidades:</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr><td colspan="5" class="text-center text-muted py-4"></td>Nenhuma modalidade cadastrado</tr>
            }
            else
            {
                foreach (var a in Model)
                {
                    <tr>
                        <td>@a.codModalidade</td>
                        <td>
                            <a asp-controller="Atletas" asp-action="Index" asp-route-codModalidade="@a.codModalidade">@a.nomeModalidade</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a href="/Modalidades/cadastrar">Cadastrar nova modalidade</a>