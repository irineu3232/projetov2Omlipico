@model POlimpicos.Models.Atletas;

@{
    ViewBag.Title = "Cadastro de Atleta";
}

<!DOCTYPE HTLM>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <style>
            body{
                font-family:'Segoe UI',Tahoma,Geneva,Verdana,sans-serif;
                 background-color: #CAEBDD;
                margin: 0;
                padding: 0;
            }
            .form-conteiner{
                width: 500px;
                margin: 50px auto;
                background: #ffffff;
                padding: 30px;
                border-radius:10px;
                box-shadow: 0 0 10px rgb(0,0,0,0.1);
            }

            h2{
                text-align: center;
                margin-bottom:20px;
                color: #333;
            }

            label{
                display:block;
                margin-top: 10px;
                color: #444;
            }

           input[type="text"],
           input[type="number"],
           input[type="date"],
           select{
                width: 100%;
                padding: 10px;
                margin-top:5px;
                border:1px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
           }

         button
        {
            margin-top: 20px;
            width: 100%;
            padding: 12px;
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s all;
        }



        button:hover {
          transition-duration: 0.3s;
          transition: 0.1s ease-out;
          background-color: #4EF55C;
        }

  
   
    </style>

</head>

<body>

    <div class="form-container">

        <h2>Cadastrar Atleta</h2>



        <form asp-action="Criar" method="post">

            <label>Nome:</label>

            <input asp-for="nomeAtleta" type="text" required />



            <label>Data de Nascimento:</label>

            <input asp-for="dataNascimento" type="text" placeholder="DD/MM/AAAA" required />



            <label>Sexo:</label>

            <select asp-for="sexo" required>

                <option value="">Selecione...</option>

                <option value="M">Masculino</option>

                <option value="F">Feminino</option>

            </select>



            <label>Altura (ex: 1.75):</label>

            <input asp-for="altura" type="number" step="0.01" />



            <label>Peso (ex: 70.5):</label>

            <input asp-for="peso" type="number" step="0.01" />



            <label>Cidade:</label>

            <select asp-for="codCidade" asp-items="@(new SelectList(ViewBag.Cidades, "CodCidade", "NomeCidade"))" required>

                <option value="">Selecione a cidade</option>

            </select>



            <button type="submit" class="btc">Cadastrar atleta</button>

        </form>

    </div>

</body>

</html>

