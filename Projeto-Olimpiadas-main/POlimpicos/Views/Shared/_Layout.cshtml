@{
    var titulo = ViewBag.Title as string ?? "POlimpicos";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@titulo</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Seu CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                <i class="bi bi-trophy-fill text-primary"></i> POlimpicos
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <nav class="collapse navbar-collapse" id="topNav">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item"><a class="nav-link" asp-controller="Edicao" asp-action="Index">Edições</a></li>

                    <li class="nav-item"><a class="nav-link" asp-controller="Atletas" asp-action="Index">Atletas</a></li>

                    @if (Context.Session.GetInt32("UserId") != null)

                    {

                        <!-- Usuário logado -->

                        <span>Bem-vindo, @Context.Session.GetString("Username")!</span>

                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Logout">Logout</a></li>

                    }

                    else

                    {

                        <!-- Usuário não logado -->

                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Login">Login</a></li>

                    }

                    <li class="nav-item dropdown">

                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">Páginas</a>

                        <ul class="dropdown-menu">

                            <li><a class="dropdown-item" asp-controller="Modalidades" asp-action="Index">Modalidades</a></li>

                            <li><a class="dropdown-item" asp-controller="Provas" asp-action="Index">Provas</a></li>

                            <li><a class="dropdown-item" asp-controller="Estados" asp-action="Index">Estados</a></li>

                            <li><a class="dropdown-item" asp-controller="Cidades" asp-action="Index">Cidades</a></li>

                            <li><a class="dropdown-item" asp-controller="Atletas" asp-action="Index"> Atleta</a></li>

                            <li><a class="dropdown-item" asp-controller="ResultadosAtletas" asp-action="Index">Resultados</a></li>

                            <li><a class="dropdown-item" asp-controller="Edicao" asp-action="Index"> Edição</a></li>

                        </ul>

                    </li>

                </ul>



            </nav>
        </div>
    </header>

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top small py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; @DateTime.Now.Year POlimpicos</span>
            <span class="text-muted">Projeto acadêmico</span>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
